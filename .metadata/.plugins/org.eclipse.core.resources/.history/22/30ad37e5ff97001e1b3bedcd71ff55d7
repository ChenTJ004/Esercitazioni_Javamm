int[][] azzeraNonUnici(int[][] M, int r, int c) {
	int m = M.length;
	int n = M[0].length;
	int elemento = M[r][c];
	int i = 1;
	while(c + i< n){
		if (elemento == M[r][c + i])
			M[r][c + i] = 0;
			i++;
	}
		
	
	for (int i = 1; i < m; i++) {
		if (elemento == M[r + i][c])
			M[r + i][c] = 0;
		if (elemento == M[r + i][c + i])
			M[r + i][c + i] = 0;
	}
	
	return M;
}

