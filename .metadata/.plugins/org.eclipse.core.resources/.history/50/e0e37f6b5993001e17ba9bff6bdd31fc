int numCifre(int n) {
	int i = 0;
	while (n>=10){
		n/=10;
		i++;
	}
	return i;
}

boolean bilanciato(int n) {
	int k = numCifre(n);
	int posizione;
	int sommaRiferimento;
	int somma;
	for(int i=0; i<k/2; i++){
		posizione = k-i;
		somma = (n/Math.pow(10,posizione) + n/Math.pow(10,k-posizione)).intValue();
