int[][] generaSingolaMatrice(int n, int start){
	int[][] M = new int[n][n];
	for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			M[i][j] = start++;
		}
	}
	return M;
}

int lunghezzaMatrice(int[] arr){
	int somma=0;
	for(int i=0; i<arr.length; i++){
		somma+=arr[i];
	}
}

