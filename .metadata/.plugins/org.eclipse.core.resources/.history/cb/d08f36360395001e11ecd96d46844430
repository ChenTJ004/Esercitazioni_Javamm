boolean anelloBilanciato(int[][] T, int k) {
	int m = T.length;
	int centro = m / 2;
	int somma = T[centro - k][centro - k] + T[centro + k][centro + k];
	int somma2;
	int riga;
	int colonna;
	while (true) {
		for (int i = 0; i < (k * 2 + 1); i++) {
			somma2 = T[centro - k][centro + (i - k)] + T[centro + k][centro + k - i];
			if(somma != somma2){
				return false;
			}
		}

	}

	return false;
}
