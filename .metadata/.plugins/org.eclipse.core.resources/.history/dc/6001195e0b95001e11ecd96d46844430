boolean anelloBilanciato(int[][] T, int k) {
	int m = T.length;
	int centro = m / 2;
	int somma = T[centro - k][centro - k] + T[centro + k][centro + k];
	// sopra e sotto
	
	for (int i = 1; i < m; i++) {
		int r1 = centro - k;
		int c1 = centro - k + i;
		int r2 = centro + k;
		int c2 = centro + k - i;
		if (T[r1][c1] + T[r2][c2] != somma) {
			return false;
		}
		r1 = centro - k + i;
		c1 = centro - k;
		r2 = centro + k - i;
		c2 = centro + k;
		if (T[r1][c1] + T[r2][c2] != somma) {
			return false;
		}
	}
	return true;
}

int[][] T = {{1,2,3,-1,-2,-3,0},
			   	     {3,7,2, 5, 6, 0,0},
				     {3,10,2,3,-5,1,0},
				     {3,0,-1,3,4,4,0},
				     {3,2,8,0,1,-7,0},
				     {3,3,5,-2,1,-4,0},
				     {3,6,5,4,0,1,2} };
		int k = 1;

System.out.println(anelloBilanciato(T, k));
