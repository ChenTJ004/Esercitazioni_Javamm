int[][] azzeraNonUnici(int[][] M, int r, int c) {
	int m = M.length;
	int n = M[0].length;
	int elemento = M[r][c];
	for (int i = 1; c + i < n; i++) {
		if (elemento == M[r][c + i])
			M[r][c + i] = 0;
	}
	for (int i = 1; r + i < m; i++) {
		if (elemento == M[r + i][c])
			M[r + i][c] = 0;
		if (elemento == M[r + i][c + i])
			M[r + i][c + i] = 0;
	}
	
	return M;
}

int[][] azzeraNonUniciMatrice(int[][] M) {

	return null;
}
