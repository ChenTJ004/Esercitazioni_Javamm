int[] rigaTraslata(int[] riga, int numPosizioni){
	int lunghezza = riga.length;
	int[] rigaTraslata = new int [lunghezza];
	for(int i=0; i<lunghezza; i++){
		rigaTraslata[i+numPosizioni] = riga[i];
	}
	return null;
}

