int[] rigaTraslata(int[] riga, short numPosizioni) {
	int lunghezza = riga.length;
	int[] rigaTraslata = new int[lunghezza];
	for (int i = 0; i < lunghezza; i++) {
		rigaTraslata[(i + numPosizioni + lunghezza*numPosizioni) % lunghezza] = riga[i];
	}
	return rigaTraslata;
}

// CONSEGNA OBBLIGATORIA
int[][] scorrimentoRighe(int[][] M) {
	int m = M.length;
	int n = M[0].length;
	int[][] matriceTraslata = new int[m][n];
	
	int index = 0;
	while (index < n) {
		if (index % 2 == 0) {
			matriceTraslata[index] = rigaTraslata(matriceTraslata[index], (short)1);
		} else {
			matriceTraslata[index] = rigaTraslata(matriceTraslata[index], (short)-1);
		}
		index++;
	}
	return matriceTraslata;
}

