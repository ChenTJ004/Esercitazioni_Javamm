boolean anelloBilanciato(int[][] T, int k) {
	int m = T.length;
   	int centro = m/2;
   	int somma = 0;
   	int riga;
   	int colonna;
   	while(true){
   		for(int i=0; i<centro;i++){
   			somma = T[centro-k+i][centro-k+i] + T[centro+k-i][centro+k-i];
   		somma = T[centro-k][centro] + T[centro+k][centro];
   		}
   		
   	}
   	
	return false;
}
