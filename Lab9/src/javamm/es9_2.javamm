/*
 * Scrivere un metodo Java-- chiamato azzeraAdiacenti che, dato in input una matrice ğ‘‡ğ‘‡ 
 * di numeri interi di dimensione m x n (m righe e n colonne), con mâ‰¥3 e nâ‰¥3, e 
 * dati due numeri interi r e c tali che 0â‰¤râ‰¤m-1 e 0â‰¤câ‰¤n-1, restituisca la matrice ğ‘‡ğ‘‡ 
 * modificata applicando lâ€™azzeramento degli elementi adiacenti allâ€™elemento di indice [r,c].
 */
int[][] azzeraAdiacenti(int[][] M, int r, int c) {
	int m = M.length;
	int n = M[0].length;
	int rigaP = (r + m - 1) % m;
	int rigaS = ((r +1) % m);
	int colP = (c + n - 1) % n;
	int colS = ((c +1) % n);

	M[rigaP][colP] = 0; // riga precedente e colonna precedente
	M[rigaP][c] = 0; // riga precedente e colonna attuale
	M[rigaP][colS] = 0; // riga precedente e colonna successiva
	
	M[r][colP] = 0; // riga attuale
	// salto M[r][c]
	M[r][colS] = 0;

	M[rigaS][colP] = 0; // riga successiva
	M[rigaS][c] = 0;
	M[rigaS][colS] = 0;
	return M;
}

void stampa(int[][] M) {
	for (int i = 0; i < M.length; i++) {
		for (int j = 0; j < M[0].length; j++) {
			System.out.print(M[i][j]);
		}
		System.out.println();
	}
}

int[][] M = new int[10][15];
for (int i = 0; i < M.length; i++) {
	for (int j = 0; j < M[0].length; j++) {
		M[i][j] = 9;
	}
}

stampa(azzeraAdiacenti(M, 0, 0));
